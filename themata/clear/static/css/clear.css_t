@import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css");

* {
    font-family:"Segoe UI","Helvetica Neue","Helvetica",Arial,sans-serif;
    color: {{ theme_text_color }} ; /* theme_text_color */
}

body {
    font-size: 100%;
    padding: 0;
    margin: 0;
    background: {{ theme_background_color }}; /* theme_background_color */
}

a {
    color: {{ theme_link_color }} !important; /* theme_link_color */
    text-decoration: none;
}

a:hover {
    color: {{ theme_highlight_color }} !important; /* theme_highlight_color */
    text-decoration: underline;
}

header {
    overflow: hidden;
    background-color: {{ theme_header_background_color }}; /* theme_header_background_color */
    box-shadow: 1px 0.5px 1px {{ theme_highlight_color }}; /* theme_highlight_color */
    position: fixed;
    top: 0px;
    width: 100vw;
    z-index: 100000000;
}

dl {
    width: 100%;
    overflow: hidden;
    padding: 0;
    margin: 0}

dt {
    float: left;
    width: 20%;
    padding: 0;
    margin: 0;
}

dd p {
    float: left;
    width: 70%;
    padding: 0;
    margin: 0;
}

table {
    background-color: {{ theme_table_background_color }}; /* theme_table_background_color */
    border-spacing: 1px;
    table-layout: fixed; 
    width: 100%;
}

table * {
    padding: 5px;
    padding-left: 10px;
}

table tr:nth-child(odd) {
    background-color: {{ theme_table_tr_odd_background_color }}; /* theme_table_tr_odd_background_color */
}

table tr:nth-child(even) {
    background-color: {{ theme_table_tr_even_background_color }} /* theme_table_tr_even_background_color */
}

code,
.highlight {
    border: none;
    background-color: {{ theme_code_background_color }} !important; /* theme_code_background_color */
    border-radius: 6px;
    padding: 0px 0px 0px 0px;
    line-height: 1.7;
    overflow-y:hidden;
    margin: 30px 0px 30px 0px;
}

code {
    padding: 2px 10px 4px 10px;
    white-space: pre-wrap;
    word-break: break-word;
}

pre {
    padding: 16px;
    margin: 0px;
}

.icon {
    max-height:60px;
    max-width:200px;
    margin: auto;
    bottom: 0px;
    margin-bottom: 0px;
    padding-bottom: 0px;
    vertical-align:middle;
}

.topnavbar {
    float: none;
    text-align:left;
    display:block;
    padding: 10px;
    height: 60px;
    line-height: 40px;
    max-width: 58%;
    margin: auto;
}

.topnavbar a {
    color: {{ theme_menu_item_color }} !important; /* theme_menu_item_color */
    text-align: center;
    text-decoration: none;
    font-size: 35px;
    top: 50%;
    left: 50%;
    margin: 15px;
    vertical-align: middle;
}

.topnavbar a:hover {
    color: {{ theme_highlight_color }} !important; /* theme_highlight_color */
}

.topnavbar a.title {
    font-size: 20px;
    margin-right: 20px;
    font-weight: bold;
}

.topnavbar .main-title {
    float: left;
}

.topnavbar .search-container {
    display: inline-block;
    margin-left: 100px;
    float: right;
}

.topnavbar input[type=text] {
  padding: 6px;
  font-size: 17px;
  border: none;
  margin-top: 15px;
  color: {{ theme_text_color }} !important; /* theme_text_color */
  background: {{ theme_header_background_color }}; /* theme_header_background_color */
  outline: none;
}

.topnavbar .search-container button {
  float: left;
  padding: 6px 10px;
  margin-top: 15px;
  margin-left: 16px;
  font-size: 17px;
  border: none;
  cursor: pointer;
  background: {{ theme_header_background_color }}; /* theme_header_background_color */
}

.topnavbar .search-container button i {
  color: {{ theme_text_color }} !important; /* theme_text_color */
}

.documentwrapper {
    margin-top: 90px;
    max-height: 100%;
    font-size: {{ theme_document_font_size }}; /* theme_document_font_size */
}  

.sidebar-left {
    float:left;
    width:15%;
    z-index: 1;
    font-size: 13px;
    position: fixed;
    top: 80px;
    bottom:0px;
    padding-bottom: 10px;
    padding-left: 5%;
    padding-right: 1%;
    overflow-y:auto;
    background: {{ theme_left_sidebar_background }};  /* theme_left_sidebar_background */
    border-right: 1px solid {{ theme_highlight_color }} !important; /* theme_highlight_color */
}

.sidebar-right {
    float:right;
    width:20%;
    z-index: 1;
    font-size: 12px;
    position: fixed;
    right: 0;
    top: 90px;
    bottom:100px;
    overflow-y:auto;
    margin-right: -50px;
    padding-right: 50px;
}

.bodywrapper {
    float:left;
    width:53%;
    margin-left: 25%;
    margin-right: 10px;
    line-height: 3vh;
}

.sidebar-left ul {
    padding: 1px;
    list-style-type: none;
    margin: 0px;
    display: {{ theme_collapsible_sidebar_display }};
}

.sidebar-left li {
    padding-left: 10px;
    margin-top: 5px;
}

{% if theme_collapsible_sidebar == True %}
   
.sidebar-left .caption {
    cursor: pointer;
    padding: 10px;
    padding-left: 1px;
    padding-bottom: 5px;
    width: 100%;
    border: none;
    outline: none;
    border-bottom: 1px solid {{ theme_highlight_color }}; /* theme_highlight_color */
    text-align: left;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
     -khtml-user-select: none; /* Konqueror HTML */
       -moz-user-select: none; /* Old versions of Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome, Opera and Firefox */
}

.sidebar-left .caption-text:after {
    content: "\2BC6"; 
    font-family: FontAwesome;
    float: right;
    top:0;
    color: {{ theme_highlight_color }}; /* theme_highlight_color */
 }

.sidebar-left .caption-text {
    color: {{ theme_highlight_color }} !important; /* theme_highlight_color */
    font-size: 17px;
    font-weight: bold; 
}

{% else %}

.sidebar-left .caption {
    font-weight: bold; 
}

{% endif %}

.sidebar-right ul {
    padding: 1px;
    list-style-type: none;
    margin: 0px;
}

.sidebar-right li {
    padding-left: 10px;
    margin-top: 5px;
}

.sidebar-left::-webkit-scrollbar {
    display: none;
}

.sidebar-left {
    -ms-overflow-style: none;
}

.sidebar-right::-webkit-scrollbar {
    display: none;
}

.sidebar-right {
    -ms-overflow-style: none;
}

.sidebar-right {
    color: #4d5052;
}

.sphinxsidebar {
    color: #4d5052;
}

/* -- body styles ----------------------------------------------------------- */

.headerlink {
    display: none;
}

.bodywrapper h1,
.bodywrapper h2,
.bodywrapper h3,
.bodywrapper h4,
.bodywrapper h5,
.bodywrapper h6 {
    font-size: 150%;
    font-weight: 500;
    margin: 15px 0px 5px 0px;
    padding: 1px 0 0px 0px;
    text-shadow: 0px 1px 0 white
}

.bodywrapper a {
    color: {{ theme_body_link_color }} !important; /* theme_body_link_color */
}

.bodywrapper a:hover {
    color: {{ theme_body_link_highlight_color }} !important; /* theme_body_link_highlight_color */
    text-decoration: underline;
}

.bodywrapper .navigation {
    background: red;
    width: 100%;
}

.bodywrapper .navigator {
    border: 1px solid {{ theme_navigator_border_color }}; /* theme_navigator_border_color */
    padding: 10px;
    margin-right: 10px;
    border-radius: 5px;
    color: {{ theme_text_color }} !important; /* theme_text_color */
    width: 40%;
}

.bodywrapper .navigator:hover {
    border: 1px solid {{ theme_body_link_color }}; /* theme_body_link_color */
}

.bodywrapper .navigator .fa {
    margin-left: 20px;
    margin-right: 20px;
}

.bodywrapper .navigation a:hover {
    text-decoration: none;
}

.bodywrapper .footer {
    text-align: center;
    z-index: 2;
}

.bodywrapper .footer .social {
    font-size: 200%;
}

.bodywrapper .footer .social > a > i {
    margin-left: 10px;
    margin-right: 10px;
}

.bodywrapper .footer .social > a > i:hover {
    color: {{ theme_body_link_highlight_color }} !important; /* theme_body_link_highlight_color */
}

.bodywrapper .footer .doc-sphinx-info {
    margin-top: 10px;
    font-size: 75%;
}


div.body h1 {
    margin-top: 0;
    padding-top: 10px;
    font-size: 250%;
    text-align: center;
    padding-bottom: 30px;
}


div.body h2 { font-size: 180%; }
div.body h3 { font-size: 150%; }
div.body h4 { font-size: 130%; }
div.body h5 { font-size: 120%; }
div.body h6 { font-size: 100%; }

div.body p, div.body dd, div.body li {
    line-height: 1.5em;
}

div.admonition p.admonition-title + p {
    display: inline;
}

div.note {
    background-color: {{ theme_note_background_color }}; /* theme_note_background_color */
    border: 1px solid {{ theme_note_border_color }}; /* theme_note_border_color */
    padding: 15px;
}

div.seealso {
    background-color: {{ theme_seealso_background_color }}; /* theme_seealso_background_color */
    border: 1px solid {{ theme_seealso_border_color }}; /* theme_seealso_border_color */
    padding: 15px;
}

div.topic {
    background-color: {{ theme_topic_background_color }}; /* theme_topic_background_color */
    padding: 15px;
}

div.warning {
    background-color: {{ theme_warning_background_color }}; /* theme_warning_background_color */
    border: 1px solid {{ theme_warning_border_color }}; /* theme_warning_border_color */
    padding: 15px;
}

p.admonition-title {
    display: inline;
}

p.admonition-title:after {
    content: ":";
}

tt {
    background-color: #ecf0f3;
    color: #222;
    font-size: 1.1em;
    font-family: monospace;
}

.viewcode-back {
    font-family: 'OpenSans',sans-serif;
}

div.viewcode-block:target {
    background-color: #f4debf;
    border-top: 1px solid #ac9;
    border-bottom: 1px solid #ac9;
}

.highlighted {
	background-color: yellow;
}
